@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr /> @*Linha*@

@*div garante que ocupara a lagura da tela*@
<div class="row">
    <div class="col-md-4">@*div para ocupar 1;3 da tela*@
        <form asp-action="Create">
            @*chamada do método post*@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                    @*define o label que aparecerá na caixa para digitar, chamaremos o name da classe seller*@
                <input asp-for="Name" class="form-control" />  
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" /> @*submit action create*@
            </div>
        </form>
    </div>
</div>