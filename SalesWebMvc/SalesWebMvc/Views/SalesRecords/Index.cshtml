@model SalesWebMvc.Models.ViewModels.SalesFormViewModel
@{
    ViewData["Title"] = "Sales Records";
    ViewData["Description"] = "Search sales by date or name to see status and more informations";
}

<h2>@ViewData["Title"]</h2>
<h4>@ViewData["Description"]</h4>

<hr />

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            @*Ação para o método SimpleSearch do controlador SalesRecords*@
            <fieldset>
                @*agrupar elementos*@

                <legend>Simple search by Date</legend>

                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label> @*Caixa de seleção data minima*@
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" /> @*Elementos da caixa de selecao (datas)*@
                    </div>
                </div>

                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Max Date</label> @*Caixa de seleção data maxima*@
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" /> @*Elementos da caixa de selecao (datas)*@
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button> @*Submit das datas selecionadas*@
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            @*Ação para o método GroupingSearch do controlador SalesRecords*@
            <fieldset>
                @*agrupar elementos*@

                <legend>Grouping search by Date</legend>

                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Min Date</label> @*Caixa de seleção data minima*@
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Max Date</label> @*Caixa de seleção data máxima*@
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Submit</button> @*Submit das datas selecionadas*@
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="NameSearch">
            @*Ação para o método GroupingSearch do controlador SalesRecords*@
            <fieldset>
                @*agrupar elementos*@

                <legend>Search by name</legend>

                <div class="form-group">
                    <label  for="id" class="col-lg-2 control-label">Seller's name</label>
                    <div class="col-lg-10">
                        <select name="id" asp-items="@(new SelectList(Model.Sellers,"Id","Name"))" class="form-control">aaa</select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <input type="submit" value="Submit" name="id" class="btn btn-primary" /> @*Submit das datas selecionadas*@
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>